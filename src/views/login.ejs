<%- include('partials/head') %>

<div class="container">
    <%- include('partials/header') %>

    <div class="col-sm-6 col-sm-offset-3">
        <h1><span class="fa fa-sign-in"></span> Entrar</h1>

        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <form action="/login" method="post">
            <div class="form-group">
                <label>Usuario</label>
                <input type="text" class="form-control" name="username" value="admin" autofocus>
            </div>
            <div class="form-group">
                <label>Senha</label>
                <input type="password" class="form-control" name="password" value="admin">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Entrar</button>
        </form>

        <hr>

        <p>Precisa de uma conta? <a href="/signup">Registre-se</a></p>
    </div>

</div>

<%- include('partials/footer') %>
