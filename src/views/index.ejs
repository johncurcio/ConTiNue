<!-- views/index.ejs -->

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Bem-Vindo a ConTiNue</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .jumbotron {
          margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <%- include('partials/header') %>
        
        <div class="jumbotron">
            <h1>Histórias</h1>
            <p class="lead">Veja nossas histórias sendo criadas!</p>
        </div>

        <div class="row">
          <% stories.forEach((story) => { %>
            <div class="col-lg-4">
              <a href="/story/<%= story.id %>" class="list-group-item justify-content-between">
                <span class="badge badge-default badge-pill"><%= story.fragments.length %></span>
                <h4 class="list-group-item-heading"><%= story.title %></h4>
                <p class="list-group-item-text"><%= story.author %></p>
                <p class="list-group-item-text"><%= story.genre %></p>
                <p class="list-group-item-text"><%= story.createdat %></p>
              </a>
            </div>
          <% }) %>
        </div>

        <%- include('partials/footer') %>
    </div>
</body>

</html>