<!-- views/index.ejs -->

<%- include('partials/head') %>

<div class="container">
    <%- include('partials/header') %>
    
    <div class="jumbotron">
        <h1>Histórias</h1>
        <p class="lead">Veja nossas histórias sendo criadas!</p>
    </div>

    <%- include('partials/stories') %>

    <% if (pages > 0) { %>
      <ul class="pagination text-center">
          <% if (current == 1) { %>
              <li class="disabled"><a>Inicio</a></li>
          <% } else { %>
              <li><a href="/storypage/1">Inicio</a></li>
          <% } %>
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1) { %>
              <li class="disabled"><a>...</a></li>
          <% } %>
          <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
              <% if (i == current) { %>
                  <li class="active"><a><%= i %></a></li>
              <% } else { %>
                  <li><a href="/storypage/<%= i %>"><%= i %></a></li>
              <% } %>
              <% if (i == Number(current) + 4 && i < pages) { %>
                  <li class="disabled"><a>...</a></li>
              <% } %>
          <% } %>
          <% if (current == pages) { %>
              <li class="disabled"><a>Fim</a></li>
          <% } else { %>
              <li><a href="/storypage/<%= pages %>">Fim</a></li>
          <% } %>
      </ul>
  <% } %>

</div>

<%- include('partials/footer') %>
