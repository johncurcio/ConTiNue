<%- include('partials/head') %>

<%- include('partials/header') %>

<div class="container-fluid">
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" id="stars" class="btn btn-normal" href="#tab1" data-toggle="tab">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <div class="hidden-xs">Perfil</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab">
                <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                <div class="hidden-xs">Histórias</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab">
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <div class="hidden-xs">Fragmentos</div>
            </button>
        </div>
    </div>

  <div class="tab-content">
    <div class="tab-pane fade in active" id="tab1">
      <ul class="list-group">
        <a class="list-group-item list-group-item-info">Estatísticas de <%= author%></a>
        <li class="list-group-item">
            <span class="badge badge-primary"><%= stories.length%></span>
            Histórias criadas: 
        </li>
        <li class="list-group-item">
            <span class="badge badge-success"><%= fragments.length%></span>
            Fragmentos criados: 
        </li>
        <li class="list-group-item">
            <span class="badge badge-warning"><%= votes.length%></span>
            Votos em fragmentos: 
        </li>
      </ul>
    </div>
    <div class="tab-pane fade in" id="tab2">
      <div class="stories">
          <%- include('partials/stories') %>
      </div>
    </div>
    <div class="tab-pane fade in" id="tab3">
      <%- include('partials/fragments') %>
    </div>
  </div>
    
</div>

<%- include('partials/footer') %>