<!-- views/index.ejs -->

<%- include('partials/head') %>

<%- include('partials/header') %>
<div class="container">
   
    <div class="well">
        <h1>Bem-vindo!</h1>
        <p class="lead">Leia uma de nossas histórias públicas</p>
    </div>

    <%- include('partials/stories') %>

    <div class="col-sm-12 text-center">
    <% if (pages > 0) { %>
      <ul class="pagination center-block"  style="display:inline-block;">
          <% if (current == 1) { %>
              <li class="disabled"><a>Inicio</a></li>
          <% } else { %>
              <li><a href="/storypage/1">Inicio</a></li>
          <% } %>
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1) { %>
              <li class="disabled"><a>...</a></li>
          <% } %>
          <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
              <% if (i == current) { %>
                  <li class="active"><a><%= i %></a></li>
              <% } else { %>
                  <li><a href="/storypage/<%= i %>"><%= i %></a></li>
              <% } %>
              <% if (i == Number(current) + 4 && i < pages) { %>
                  <li class="disabled"><a>...</a></li>
              <% } %>
          <% } %>
          <% if (current == pages) { %>
              <li class="disabled"><a>Fim</a></li>
          <% } else { %>
              <li><a href="/storypage/<%= pages %>">Fim</a></li>
          <% } %>
      </ul>
  <% } %>
  </div>
</div>

<%- include('partials/footer') %>
